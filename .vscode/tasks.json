{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Unit-tests",
            "type": "shell",
            "command": "remake test STD=c++17",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run make",
            "type": "shell",
            "command": "remake ${input:makeTarget} STD=${input:cppStandard}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "id": "makeTarget",
            "type": "promptString",
            "description": "Choose make target",
            "default": "all"
        },
        {
            "id": "cppStandard",
            "type": "pickString",
            "description": "Choose cpp standard",
            "options": [
                "c++11",
                "c++14",
                "c++17"
            ],
            "default": "c++11"
        }
    ]
}
